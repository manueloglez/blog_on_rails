<h1>Change your info</h1>

<%= form_with model:@user, local:true do |form| %>
  <div>
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control mb-3' %>
  </div>
  <div>
    <%= form.label :email, class: 'form-label' %>
    <%= form.email_field :email, class: 'form-control mb-1' %>
  </div>
  <small> <%= link_to 'Change your password', change_password_path(@user)%> </small>
  <div>
    <%= form.submit 'Edit', class: "btn btn-outline-warning mt-3"%>
  </div>
<% end %>